# Modify /etc/puppet/puppet.conf on the client accordingly
[main]
vardir = /var/lib/puppet
logdir = /var/log/puppet
rundir = /var/run/puppet
ssldir = $vardir/ssl

[agent]
pluginsync      = true
report          = true
ignoreschedules = true
daemon          = false
ca_server       = {{ destination_capsule }}
certname        = {{ client_system }}
environment     = {{ puppet_environment }}
server          = {{ destination_capsule }}
